<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/margin_8dp_size"
    app:cardCornerRadius="@dimen/margin_8dp_size"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginStart="@dimen/margin_16dp_size"
    android:layout_marginEnd="@dimen/margin_16dp_size"
    android:layout_marginBottom="@dimen/margin_8dp_size"
    android:layout_marginTop="@dimen/margin_8dp_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16dp_size">

        <TextView
            android:id="@+id/reportText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reportDeleteButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/reportDeleteButton"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/remove"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
           />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>